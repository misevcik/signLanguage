<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/test_detail_toolbar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/video_preview"
        android:layout_below="@id/test_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:background="#000000"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:layout_below="@id/video_preview"
        android:background="#EDEDE8">

        <VideoView
            android:id="@+id/test_videoview"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:background="#EDEDE8">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.otazka z 6"
                android:id="@+id/test_questionid"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="20sp"
                android:text="Ake Slovo je znazornene na videu?"/>
            
            <TextView
                android:id="@+id/test_answer1"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Odpoved 1"
                android:gravity="center_vertical|start"
                android:background="@drawable/search_bar_round"/>
            <TextView
                android:id="@+id/test_answer2"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:text="Odpoved 2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical|start"
                android:background="@drawable/search_bar_round"/>
            <TextView
                android:id="@+id/test_answer3"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Odpoved 3"
                android:gravity="center_vertical|start"
                android:background="@drawable/search_bar_round"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>